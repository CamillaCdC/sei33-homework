<%= form_for @comic do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :publish_year %>
    <%= f.text_field :publish_year %>
    <%= f.label :ended %>
    <%= f.select :ended, [['Yes', true], ['No', false]] %>    
    <%= f.label :image %>
    <%= f.url_field :image %>
     <%= f.label :author_id %>
    <%= f.select :author_id, Author.pluck(:name, :id), :include_blank => true %>

    <%= f.submit %>
<% end %>