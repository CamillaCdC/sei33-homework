<h2>Edit Ocean</h2>

<form action="<%= ocean_path(@ocean.id) %>" method="post">
  <label>
    Name:
    <input name="name" required autofocus value="<%= @ocean.name %>">
  </label>
  <label>
    Image:
    <input type="url" name="image" value="<%= @ocean.image %>">
  </label>
  <label>
    Area:
    <input type="number" name="area" value="<%= @ocean.area %>">
  </label>
  <label>
    Volume:
    <input type="number" name="volume" value="<%= @ocean.volume %>">
  </label>

  <button>Update ocean</button>
</form>
