<h2><%= @mountain.name %></h2>


<%= image_tag @mountain.image, :class => "featured" if @mountain.image.present? %>

<section>
  <ul>
    <li>Height: <%= @mountain.height %></li>
    <li>Location: <%= @mountain.location %></li>
  </ul>

  <p>Interesting Fact: <br/> <%= @mountain.fact %></p>
</section>

<div class="controls">
  <%= link_to 'Edit Mountain', edit_mountain_path(@mountain.id), :class => 'edit' %>
  <%= button_to 'Delete Mountain', mountain_path(@mountain.id), :method => 'delete', :class => 'warning' %>
</div>
