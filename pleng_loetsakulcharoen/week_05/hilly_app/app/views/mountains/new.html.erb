<h2>Share the Mountains You Must Visit in Lifetime!</h2>

<form action="<%= mountains_path %>" method="post">
  <label>
    Name:
      <input type="text" name="name" >
  </label>

  <label>
    Image:
      <input type="url" name="image">
  </label>

  <label>
    Elevation:
      <input type="number" name="elevation">
  </label>

  <label>
    First ascent:
      <input type="text" name="first_ascent">
  </label>

  <label>
    Location:
      <input type="text" name="country">
  </label>


  <button>Add to Bucket list!</button>
</form>
