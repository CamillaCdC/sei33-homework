<h2>Edit Furniture</h2>

<form action="/furnitures/<%= @furniture["id"] %>" method="post">

  <div class="form-item">
    <label class="form-item-label" for="name">Name:</label>
    <input type="text" name="name" placeholder="furniture Name" required value="<%= @furniture["name"] %>">
  </div>

  <div class="form-item">
    <label class="form-item-label" for="image">Image:</label>
    <input type="url" name="image" placeholder="http://..." value="<%= @furniture["image"] %>">
  </div>

  <div class="form-item">
    <label class="form-item-label" for="image">Description:</label>
    <textarea name="description" placeholder="Edit furniture description"><%= @furniture["description"] %></textarea>
  </div>

  <div class="form-item">
    <button type="submit">Create furniture</button>
    <a href="/furnitures">Back to the list</a>
  </div>

</form>