<h1><%= @author.name %></h1>

<%= image_tag @author.image, :class=> "feature" if @author.image.present? %>

<ul>
<li>Name: <%= @author.name %></li>
<% if @author.dob.present? %>
<li>Date of birth: <%= @author.dob.strftime '%A, %B %e, %Y' %></li>
<% end %>
<li>Style: <%= @author.style %></li>
</ul>

<% @author.comics.each do |comic| %>
 <%= link_to image_tag(comic.image, :class => "thumb"), comic %>
 <% end %>


<div class="controls">
    <%= link_to "Edit artist", edit_author_path(@author) %>
    <%= link_to "Delete artist", @author, :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
</div>