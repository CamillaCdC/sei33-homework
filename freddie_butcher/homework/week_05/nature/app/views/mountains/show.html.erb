<h2>Show Mountain</h2>

<%= image_tag @mountain.image, :class => 'feature' if @mountain.image.present? %>

<ul>
  <li>Name: <%= @mountain.name %></li>
  <li>Height: <%= @mountain.height %></li>
  <li>Range: <%= @mountain.range %></li>
  <li>Ascent: <%= @mountain.first_ascent %></li>
</ul>

<div class="controls">
  <%= link_to 'Edit mountain', edit_mountain_path(@mountain.id)  %>
  <%= button_to 'Delete mountain', mountain_path(@mountain.id), :method => 'delete', :class => 'warning'  %>
</div>
