<h2>Edit mountain</h2>



<form action="<%= mountain_path(@mountain.id) %>" method="post">

<label>Name:
<input name="name" required autofocus value="<%= @mountain.name %>">
</label>
<label>Image
<input type="url" name="image" value="<%= @mountain.image %>">
</label>


<label>Country
<input type="name" name="country"  value="<%= @mountain.country%>">
</label>


<label>Height:
<input type="number" name="height_m" value="<%= @mountain.height_m %>">
</label>


<label>Reviews:
<input type="number" name="reviews_score" value="<%= @mountain.reviews_score %>">
</label>


<button>Create planet</button>
</form>
