<h2>Create a New Dino</h2>


<div class="create">
  <div class="create_identity">
    <!-- name -->
    <!-- species -->
    <div>
      <label>
        Nickname:<span class="required">*</span>
        <input name="nickname" type="text" placeholder="Mertyl">
      </label>
      <br>
      Species:
      <select name="selectSpecies" id="selectSpecies">
        <option value="chunk">Chunk</option>
        <option value="munch">Munch</option>
        <option value="jig">Jig</option>
        <option value="steggo">Steggo</option>
      </select>
      <!-- add button. -->
      <button id="addSpecies">change</button>
    </div>
    <!-- accessory to add -->
    <div>
      <!-- toggle box to identify which accessory we are editing. -->
      Accessories:
      <ul id="accessory_list" class="accessory_list">
        <!-- Accessories added here in main.js > creator.accessoryListUpdate() -->
      </ul>
      <br>
      Add an accessory:
      <select name="newAccessory" id="newAccessory">
        <!-- Accessories added here in main.js > creator.accessoryDropdown() -->
      </select>
      <!-- add button to add a new accessory. -->
      <button id="addAccessory">add</button>
    </div>
    <!-- log the X and Y transform? -->
    <!-- arrow buttons to edit location of accessory -->
  </div>

<!-- edit area -->
  <div class="editDino">
    <img class="create_dino_species" src="/images/chunk.jpg">
  </div>


  <form action="/dinosaurs" method="post">
    <label>
      Nickname:<span class="required">*</span>
      <input name="nickname" type="text" placeholder="Mertyl">
    </label>
    <label>
      Genus:<span class="required">*</span>
      <input name="genus" type="text" placeholder="T-Rex">
    </label>
    <label>
      Family:<span class="required">*</span>
      <input name="family" type="text" placeholder="Tyrannosauridae">
    </label>
    <label>
      Height:
      <input name="height" type="text" placeholder="5.6" value="10">
    </label>
    <label>
      Eaten by:
      <input name="eaten_by" type="text" placeholder="Nobody" value="T-Rex">
    </label>
    <label>
      Diet:
      <input name="diet" type="text" placeholder="Carnivore" value="Omnivore">
    </label>
    <label>
      Image:<span class="required">*</span>
      <input name="image" type="text" placeholder="https://">
    </label>
    <button>Create!</button>
  </form>
</div>


<script src="/js/main.js"></script>
