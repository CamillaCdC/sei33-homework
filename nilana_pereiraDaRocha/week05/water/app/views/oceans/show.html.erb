<h2><%= @ocean.name %></h2>
<%= image_tag @ocean.image, :class => 'feature' if @ocean.image.present? %>
<ul>
  <li>Name: <%= @ocean.name %></li>
  <li>Location: <%= @ocean.location %></li>
  <li>Description: <%= @ocean.description %></li>
</ul>
<div class="controls">
  <%= button_to 'Delete ocean', ocean_path(@ocean.id), :method => 'delete', :class => 'warning' %>
</div>
