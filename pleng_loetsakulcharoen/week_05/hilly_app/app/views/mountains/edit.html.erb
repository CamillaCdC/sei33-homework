<h2>Edit </h2>

<!-- line 4, instead of going to all mountains, action points to particular mountain -->
<form action="<%= mountain_path(@mountain.id) %>" method="post">
  <label>
    Name:
      <input type="text" name="name" value="<%= @mountain.name %>">
  </label>,.

  <label>
    Image:
      <input type="url" name="image" value="<%= @mountain.image %>">
  </label>

  <label>
    :Elevation
      <input type="number" name="elevation" value="<%= @mountain.elevation %>">
  </label>

  <label>
    First ascent:
      <input type="text" name="first_ascent" value="<%= @mountain.first_ascent %>">
  </label>

  <label>
    Location:
      <input type="text" name="country" value="<%= @mountain.country %>">
  </label>


  <button>Save</button>
</form>
