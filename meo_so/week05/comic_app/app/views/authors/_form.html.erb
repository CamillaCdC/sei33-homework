<%= form_for @author do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true, :require => true %>
    <%= f.label :dob, "Date of birth" %>
    <%= f.text_field :dob, :placeholder => "YYYY-MM-DD" %>
    <%= f.label :style %>
    <%= f.text_field :style %>
    <%= f.label :image %>
    <%= f.url_field :image %>
    <%= f.submit %>

    <% end %>